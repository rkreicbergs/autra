<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trigger_level_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:textAllCaps="false">

    <LinearLayout
        android:id="@+id/trigger_level_triggers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/trigger_level_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_level_start" />

    <Button
        android:textAllCaps="false"
        android:id="@+id/trigger_level_recognize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_trigger_level_recognize"
        android:textSize="30sp" />

    <Button 
        android:id="@+id/btn_level_end"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:text="@string/btn_level_end"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/trigger_level_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center|center_vertical"
            android:textSize="20sp" />
        
        <TextView
            android:id="@+id/trigger_level_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:gravity="center|center_vertical"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>