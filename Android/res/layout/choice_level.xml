<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choice_level_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/choice_level_triggers"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button 
        android:id="@+id/choice_level_start"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:text="@string/btn_level_start"
        />

    <Button 
        android:id="@+id/btn_level_end"
        android:layout_width ="match_parent"
        android:layout_height ="wrap_content"
        android:text="@string/btn_level_end"
        />

    <TextView
        android:id="@+id/choice_level_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/choice_level_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>

